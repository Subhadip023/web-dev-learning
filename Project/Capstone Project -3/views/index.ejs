<%- include('partials/header.ejs') %>
  <h1>Blog Posts</h1>
<ul>
    <% posts.forEach((post, index) => { %>
      <div class="blog">
        <li>
          <h2><%= post.title %></h2>
          <p><%= post.content %></p>
          <a href="/edit/<%= index %>">Edit</a>
          <a href="/delete/<%= index %>">Delete</a>
        </li>
      </div>
    <% }); %>
  </ul>
  
  <a href="/new">New Post</a>

  <%- include('partials/footer.ejs') %>
